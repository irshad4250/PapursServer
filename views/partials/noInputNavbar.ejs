<style>
  .navbar {
    padding: 0;
    margin: 0;
    position: sticky;
    height: 55px;
    background-color: var(--colorAccent);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    overflow: hidden;
    padding-left: 20px;
  }

  nav > ul {
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    list-style: none;
    column-gap: 25px;
    row-gap: 10px;
    box-sizing: border-box;
    margin-right: 20px;
    transition: 250ms ease-out;
  }

  ul > li {
    font-family: var(--fontAccent);
    font-size: 20px;
    color: white;
    cursor: pointer;
  }
  .title {
    font-family: var(--titleFont);
    font-size: 35px;
    color: white;
  }
  .burger {
    display: none;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    width: 50px;
    height: 30px;
    cursor: pointer;
    margin-right: 20px;
  }
  .burger > div {
    background-color: white;
    width: 100%;
    height: 5px;
    border-radius: 3px;
  }
  .close {
    display: none;
  }

  @media screen and (max-width: 768px) {
    nav > ul {
      position: fixed;
      top: 100%;
      left: 0;
      width: 100vw;
      height: 100vh;
      z-index: 110;
      background-color: var(--colorAccent);
      flex-direction: column;
      align-items: center;
      justify-content: start;
    }
    .burger {
      display: flex;
    }
    .close {
      text-decoration: underline;
      display: block;
    }
  }
</style>
<nav class="navbar">
  <a href="/" class="title">Papurs</a>
  <ul>
    <li class="close">Close</li>
    <li><a href="/">Home</a></li>
    <li><a href="/news">News</a></li>
    <li><a href="/pastPapers">Past papers</a></li>
    <li><a href="/about">About</a></li>
    <li><a href="/contact">Contact</a></li>
  </ul>
  <div class="burger">
    <div></div>
    <div></div>
    <div></div>
  </div>
</nav>

<script>
  document.querySelector(".burger").addEventListener("click", () => {
    document.querySelector("ul").style.top = "0"
  })

  document.querySelector(".close").addEventListener("click", () => {
    document.querySelector("ul").style.top = "100%"
  })
</script>
